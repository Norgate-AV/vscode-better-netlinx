{
    "name": "vscode-better-netlinx",
    "displayName": "vscode-better-netlinx",
    "description": "Better syntax highlighting for NetLinx",
    "version": "0.0.1",
    "publisher": "damienbutt",
    "engines": {
        "vscode": "^1.98.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "main": "./out/extension.js",
    "activationEvents": [
        "onLanguage:netlinx",
        "workspaceContains:**/*.axs",
        "workspaceContains:**/*.axi",
        "onStartupFinished"
    ],
    "contributes": {
        "languages": [
            {
                "id": "netlinx",
                "aliases": [
                    "NetLinx",
                    "netlinx"
                ],
                "extensions": [
                    ".axs",
                    ".axi"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "netlinx",
                "scopeName": "source.netlinx",
                "path": "./syntaxes/netlinx.tmLanguage.json"
            }
        ],
        "commands": [
            {
                "command": "netlinx.reloadSyntax",
                "title": "NetLinx: Reload Syntax"
            },
            {
                "command": "netlinx.inspectTokens",
                "title": "NetLinx: Inspect Token Scopes"
            }
        ],
        "keybindings": [
            {
                "command": "netlinx.inspectTokens",
                "key": "ctrl+shift+alt+i",
                "mac": "cmd+shift+alt+i",
                "when": "editorFocus && editorLangId == netlinx"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run combine-grammar && npm run compile",
        "build": "npm run combine-grammar && tsc -p ./",
        "watch": "tsc -watch -p ./",
        "compile": "tsc -p ./",
        "combine-grammar": "node ./build/combine-grammar.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.98.0",
        "@types/node": "^20.10.0",
        "typescript": "^5.3.3"
    },
    "extensionDependencies": [],
    "extensionPack": []
}
