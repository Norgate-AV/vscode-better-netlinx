{
    "compilerOptions": {
        "module": "NodeNext",
        "target": "ES2022",
        "lib": ["ES2022"],
        "sourceMap": true,
        "rootDir": "src",
        "strict": true,
        "noEmit": true /* Changed: Don't emit files, just do type checking */,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "exclude": ["node_modules", ".vscode-test"]
}
