{
    "compilerOptions": {
        "module": "NodeNext",
        "target": "ES2022",
        "lib": ["ES2022", "DOM"],
        "sourceMap": true,
        "rootDir": ".",
        "strict": true,
        "noEmit": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noUncheckedIndexedAccess": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "checkJs": true
    },
    "include": [
        "src/**/*",
        "eslint.config.mjs",
        "tsup.config.ts",
        "vitest.config.ts"
    ]
}
